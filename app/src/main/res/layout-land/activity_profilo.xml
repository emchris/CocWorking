<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profilo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".ProfiloActivity">

    <include
        android:id="@+id/toolbar_orange"
        layout="@layout/toolbar_orange" />

    <ImageView
        android:id="@+id/ellissi_arancione"
        android:layout_width="799dp"
        android:layout_height="57dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/semelissi_arancione_land" />

    <TextView
        android:id="@+id/profilo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_profilo"
        android:textColor="@color/colorPrimary"
        android:textSize="35sp"
        android:textStyle="bold"
        app:fontFamily="@font/amatic_sc"
        app:layout_constraintBottom_toBottomOf="@+id/ellissi_arancione"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button_pdf_contratto"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:background="@drawable/icon_pdf"
        android:shadowColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/profilo_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.207" />

    <Button
        android:id="@+id/button_edit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/icon_edit"
        android:shadowColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_pdf_contratto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <ImageView
        android:id="@+id/image_profilo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="11dp"
        app:layout_constraintBottom_toTopOf="@+id/nome_cognome"
        app:layout_constraintEnd_toEndOf="@+id/nome_cognome"
        app:layout_constraintStart_toStartOf="@+id/nome_cognome"
        app:layout_constraintTop_toBottomOf="@+id/ellissi_arancione"
        app:srcCompat="@drawable/icon_user_profile" />

    <TextView
        android:id="@+id/nome_cognome"
        android:layout_width="164dp"
        android:layout_height="27dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:gravity="center"
        android:text="Nome Cognome"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_profilo" />

    <TextView
        android:id="@+id/title_dati_e_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="2dp"
        android:text="@string/title_dati_e_info"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/info_utente"
        app:layout_constraintStart_toStartOf="@+id/info_utente"
        app:layout_constraintTop_toBottomOf="@+id/ellissi_arancione" />

    <TextView
        android:id="@+id/info_utente"
        android:layout_width="366dp"
        android:layout_height="46dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_professione"
        app:layout_constraintTop_toBottomOf="@+id/title_dati_e_info" />

    <TextView
        android:id="@+id/title_professione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/title_professione"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/professione_utente"
        app:layout_constraintStart_toStartOf="@+id/professione_utente"
        app:layout_constraintTop_toBottomOf="@+id/info_utente" />

    <TextView
        android:id="@+id/professione_utente"
        android:layout_width="370dp"
        android:layout_height="42dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/interesse"
        app:layout_constraintStart_toStartOf="@+id/title_interessi"
        app:layout_constraintTop_toBottomOf="@+id/title_professione" />

    <TextView
        android:id="@+id/title_interessi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="43dp"
        android:text="@string/title_interessi"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/interesse"
        app:layout_constraintTop_toBottomOf="@+id/professione_utente" />

    <ImageView
        android:id="@+id/interesse"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/title_interessi"
        app:layout_constraintEnd_toStartOf="@+id/interesse2"
        app:layout_constraintTop_toTopOf="@+id/title_interessi"
        app:srcCompat="@drawable/icon_sport" />

    <ImageView
        android:id="@+id/interesse2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="164dp"
        android:layout_marginRight="164dp"
        app:layout_constraintBottom_toBottomOf="@+id/interesse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/interesse"
        app:srcCompat="@drawable/icon_relax" />

    <ImageView
        android:id="@+id/logo_facebook"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_linkedin"
        app:layout_constraintEnd_toStartOf="@+id/logo_instagram"
        app:layout_constraintTop_toTopOf="@+id/logo_linkedin"
        app:srcCompat="@drawable/icon_facebook" />

    <ImageView
        android:id="@+id/logo_instagram"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="69dp"
        android:layout_marginRight="69dp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_facebook"
        app:layout_constraintEnd_toStartOf="@+id/professione_utente"
        app:layout_constraintTop_toTopOf="@+id/logo_facebook"
        app:srcCompat="@drawable/icon_instagram" />

    <ImageView
        android:id="@+id/logo_linkedin"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nome_cognome"
        app:srcCompat="@drawable/icon_linkedin" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ellissi_arancione"
        android:layout_width="420dp"
        android:layout_height="159dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_blue"
        app:srcCompat="@drawable/semelissi_arancione_convenzioni_2" />

    <ImageView
        android:id="@+id/ellissi_azzurra"
        android:layout_width="545dp"
        android:layout_height="196dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/semelissi_azzurra" />

    <include
        android:id="@+id/toolbar_blue"
        layout="@layout/toolbar_blue" />

    <TextView
        android:id="@+id/text_bacheca"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:text="@string/title_promozioni"
        android:textColor="@color/colorPrimary"
        android:textSize="37sp"
        android:textStyle="bold"
        app:fontFamily="@font/amatic_sc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_blue" />

    <TextView
        android:id="@+id/text_convenzioni"
        android:layout_width="131dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:text="@string/title_convenzioni"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/amatic_sc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_bacheca" />


</androidx.constraintlayout.widget.ConstraintLayout>